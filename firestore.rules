rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isAdmin() {
      // IMPORTANT: Replace the placeholder with your actual Firebase User ID (UID)
      // To find your UID, go to the Firebase Console -> Authentication -> Users
      return request.auth.uid == 'REMPLACEZ_CECI_PAR_VOTRE_UID_FIREBASE';
    }

    // Helper function to check if the user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only read/write their own data
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }

    // Products can be read by anyone, but only managed by admins
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      
      // Reviews can be read by anyone, but only created by signed-in users
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if false; // Reviews are immutable for now
      }
    }
    
    // Categories can be read by anyone, but only managed by admins
    match /categories/{categoryId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
    }

    // Orders can only be read by the user who created them, and created by signed-in users
    match /orders/{orderId} {
        allow read: if isOwner(resource.data.userId);
        allow create: if isSignedIn();
        allow update, delete: if false; // Orders are immutable once created
    }

    // Settings can be read by anyone, but only managed by admins
    match /settings/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
