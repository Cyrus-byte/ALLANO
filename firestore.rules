
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Rules for products
    match /products/{productId} {
      // Anyone can read products
      allow get: if true;
      // Only admins can create, update, or delete products
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

        // Rules for product reviews
        match /reviews/{reviewId} {
            // Any authenticated user can add a review
            allow create: if request.auth != null;
            // Anyone can read reviews
            allow get: if true;
            // Users can only update or delete their own reviews. Admins can update/delete any.
            allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
        }
    }

    // Rules for users
    match /users/{userId} {
        // Users can create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can only read/update their own data. Admins can read/update any user.
      allow read, update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Rules for categories
    match /categories/{categoryId} {
        // Anyone can read categories
        allow get: if true;
        // Only admins can create, update, or delete categories
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for orders
    match /orders/{orderId} {
        // Users can create orders
        allow create: if request.auth != null;
        // Users can only read their own orders. Admins can read any order.
        allow get: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
        // Only admins can update orders (e.g., change status)
        allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Rules for settings
    match /settings/{docId} {
        // Anyone can read settings
        allow get: if true;
        // Only admins can write settings
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for promo codes
    match /promoCodes/{codeId} {
        // Anyone can read a promo code to verify it
        allow get: if true;
        // Only admins can create, update, or delete promo codes
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
