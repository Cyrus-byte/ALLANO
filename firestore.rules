
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an administrator
    function isAdmin() {
      // IMPORTANT: Replace the placeholder with your actual Firebase User UID.
      // To find your UID, go to the Firebase Console -> Authentication -> Users tab.
      let adminUIDs = [
        // TODO: REMPLACEZ_CECI_PAR_VOTRE_UID_FIREBASE
        'lsVXL4iLaEWydMn8jWWs3V0tncL2'
      ];
      return request.auth != null && request.auth.uid in adminUIDs;
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users: Can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Products: Read-only for everyone, write access for admins
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reviews: Read-only for everyone, write for authenticated users
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Categories: Read-only for everyone, write access for admins
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Orders: Users can only access their own orders
    match /orders/{orderId} {
        allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Settings: Read-only for everyone, write access for admins
    match /settings/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
