
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    // IMPORTANT: Replace the placeholder UID with your actual Firebase User ID.
    // You can find your UID in the Firebase Console under Authentication > Users.
    function isAdmin() {
      return request.auth.uid in ['REPLACE_WITH_YOUR_ADMIN_UID'];
    }

    // =================================
    // Collection Rules
    // =================================

    // Users: Can only read/write their own data.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if isSignedIn();
    }

    // Products: Publicly readable, only admins can write.
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      // Reviews subcollection: Anyone signed in can create a review.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if false; // Future: allow user to edit their own review
      }
    }

    // Orders: Users can only read/create their own orders. Admins can view all.
    match /orders/{orderId} {
        allow read: if request.resource.data.userId == request.auth.uid || isAdmin();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if isAdmin();
        allow list: if isAdmin();
    }
    
    // Categories: Publicly readable, only admins can write.
    match /categories/{categoryId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
    }

    // Settings: Publicly readable, only admins can write.
    match /settings/{settingId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
    }
  }
}
