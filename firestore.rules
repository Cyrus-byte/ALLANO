rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read and write to their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read orders that belong to them
    match /orders/{orderId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // Allow anyone to read public data like products, categories, and settings
    match /products/{productId} {
      allow read: if true;
    }
    
    match /products/{productId}/reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
    }

    match /categories/{categoryId} {
      allow read: if true;
    }

    match /settings/{settingId} {
        allow read: if true;
    }

    match /promoCodes/{codeId} {
      // ANYONE can read a promo code to apply it.
      allow read: if true;
      // ONLY admins can create, update, or delete promo codes.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
