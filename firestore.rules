
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Les utilisateurs ne peuvent lire et écrire que leurs propres documents.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Les produits sont lisibles par tous, mais l'écriture est restreinte.
    match /products/{productId} {
      allow read: if true;
      // Seuls les utilisateurs authentifiés peuvent créer, mettre à jour ou supprimer des produits.
      // Pour une meilleure sécurité, vous devriez ajouter un rôle admin ici.
      allow create, update, delete: if request.auth != null;

      // Les avis sont lisibles par tous, mais ne peuvent être créés que par des utilisateurs authentifiés.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
    }

    // Les catégories sont lisibles par tous, mais l'écriture est restreinte.
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Les utilisateurs ne peuvent lire que leurs propres commandes.
    match /orders/{orderId} {
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Empêche la mise à jour ou la suppression des commandes depuis le client.
      allow update, delete: if false;
    }

    // Les paramètres sont lisibles par tous, mais modifiables uniquement par des utilisateurs authentifiés.
    match /settings/{settingId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
