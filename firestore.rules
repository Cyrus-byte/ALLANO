
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =============================================================
    // FONCTION D'ADMINISTRATION
    // =============================================================
    function isAdmin() {
      // Pour devenir administrateur, remplacez la ligne ci-dessous :
      // 1. TROUVEZ votre UID dans la console Firebase (Authentication -> Users).
      // 2. REMPLACEZ 'REMPLACEZ_CECI_PAR_VOTRE_UID_FIREBASE' par votre UID.
      // Exemple : return request.auth.uid == 'AbcDeF1gH2iJkL3mN4oP5qR6sT7uV8w';
      return request.auth.uid == 'REMPLACEZ_CECI_PAR_VOTRE_UID_FIREBASE';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // =============================================================
    // RÃˆGLES DES COLLECTIONS
    // =============================================================

    // Users: Can only read/write their own data
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }

    // Products: Read-only for everyone, write access for admins
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      // Reviews Subcollection: Read-only for all, write for signed-in users
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isOwner(request.resource.data.userId);
      }
    }
    
    // Categories: Read-only for everyone, write access for admins
    match /categories/{categoryId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
    }

    // Orders: Users can only access their own orders
    match /orders/{orderId} {
        allow read, update: if isOwner(resource.data.userId);
        allow create: if isSignedIn();
    }

    // Settings: Read-only for everyone, write access for admins
    match /settings/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
