rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Products can be read by anyone, but only created/updated/deleted by a logged-in user.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;

      // Reviews can be read by anyone, but only created by a logged-in user.
      // No one can update or delete a review from the client.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
      }
    }

    // Categories can be read by anyone, but only written by a logged-in user.
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Users can only read/write their own data (cart, wishlist, orders).
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders can be created by a logged in user, but only read by that same user.
    match /orders/{orderId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
